@model ResetPasswordViewModel


<div class="form-container">
	<div class="form-wrapper " style="height:400px;">
		<h2>Reset Password</h2>
		<form asp-action="ResetPassword" method="post">
			<input type="hidden" asp-for="Email" />
			<input type="hidden" asp-for="Otp" />
			<div class="form-group">
				<label for="NewPassword">NewPassword*</label>
				<input type="password" id="NewPassword" name="NewPassword" placeholder="NewPassword" required>
				<span asp-validation-for="NewPassword" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label for="ConfirmPassword">ConfirmPassword*</label>
				<input type="password" id="ConfirmPassword" name="ConfirmPassword" placeholder="ConfirmPassword" required>
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>
			<button type="submit">Reset</button>
		</form>
	</div>
</div>
