@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}



<div class="form-container">
    <div class="form-wrapper">
        <h2>Create New Account</h2>
        <form asp-controller="Account" asp-action="Register" method="post">
            <div class="form-row">
                <!-- First Name -->
                <div class="form-group" style="flex: 1;">
                    <label asp-for="FirstName">First Name *</label>
                    <input type="text" id="FirstName" name="FirstName" placeholder="First Name">
                </div>
                <!-- Last Name -->
                <div class="form-group" style="flex: 1;">
                    <label asp-for="LastName">Last Name *</label>
                    <input type="text" id="LastName" name="LastName" placeholder="Last Name">
                </div>
            </div>

            <div class="form-row">
                <!-- Email -->
                <div class="form-group" style="flex: 1;">
                    <label asp-for="Email">Email *</label>
                    <input type="text" id="Email" name="Email" placeholder="Email">
                </div>
                <!-- Mobile Number -->
                <div class="form-group" style="flex: 1;">
                    <label asp-for="PhoneNumber">Mobile Number *</label>
                    <input type="text" id="PhoneNumber" name="PhoneNumber" placeholder="Mobile Number">
                </div>
            </div>

            <div class="form-row">
                <!-- DOB -->
                <div class="form-group" style="flex: 1;">
                    <label asp-for="DOB">DOB *</label>
                    <input type="date" id="DOB" name="DOB">
                </div>
                <!-- Gender -->
                <div class="form-group" style="flex: 1;">
                    <label asp-for="Gender">Gender *</label>
                    <select id="Gender" name="Gender">
                        <option value="" disabled selected>Select Gender</option>
                        <option>Male</option>
                        <option>Female</option>
                        <option>Other</option>
                    </select>
                </div>
            </div>

            <div class="form-row">
                <!-- Country -->
                <div class="form-group" style="flex: 1;">
                    <label asp-for="Country">Country *</label>
                    <input type="text" id="Country" name="Country" placeholder="Country">
                </div>
                <!-- State -->
                <div class="form-group" style="flex: 1;">
                    <label asp-for="State">State *</label>
                    <input type="text" id="State" name="State" placeholder="State">
                </div>
            </div>

            <div class="form-row">
                <!-- City -->
                <div class="form-group" style="flex: 1;">
                    <label asp-for="City">City *</label>
                    <input type="text" id="City" name="City" placeholder="City">
                </div>
            </div>
            <div class="form-row">
                <!-- Country -->
                <div class="form-group" style="flex: 1;">
                    <label asp-for="Password">Password *</label>
                    <input type="password" id="Password" name="Password" placeholder="Password">
                </div>
                <!-- State -->
                <div class="form-group" style="flex: 1;">
                    <label asp-for="ConfirmPassword">ConfirmPassword *</label>
                    <input type="password" id="ConfirmPassword" name="ConfirmPassword" placeholder="ConfirmPassword">
                </div>
            </div>
            <button type="submit">Register</button>
            <p class="login-link">
                Already have an Account? <a asp-controller="Account" asp-action="Login">Login</a>
            </p>
        </form>
    </div>
</div>
