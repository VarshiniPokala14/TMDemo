@model Trek

<style>
    .btn-primary {
        background-color: #ffc107;
        border: none;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #e0a800;
        }

    .btn-success {
        background-color: #28a745;
        border: none;
        color: #fff;
    }

        .btn-success:hover {
            background-color: #218838;
        }
</style>

<div class="col-md-4 mb-4">
    <div class="trek-card">
        <!-- Trek Image -->
        <img src="@Url.Action("GetImage", "Trek", new { trekId = Model.TrekId })" alt="@Model.Name">

        <div class="trek-card-body">
            <!-- Duration and Difficulty -->
            <p class="trek-card-subtitle">
                @Model.DurationDays Days &nbsp; ● &nbsp; @Model.DifficultyLevel
            </p>

            <!-- Trek Title -->
            <h5 class="trek-card-title">@Model.Name</h5>
            <h4 class="trek-card-info">Location: @Model.Region</h4>
            

            <!-- Action Buttons -->
            <div class="trek-card-actions">
                <a href="@Url.Action("Details", "Trek", new { trekid = Model.TrekId })" class="btn btn-success">Get Trek Info</a>
                @* <button type="submit" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ViewdatesModal">
                    View Dates
                </button> *@
                <a href="@Url.Action("ViewDates","Trek",new {trekid=Model.TrekId})" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ViewdatesModal">View Dates</a>
            </div>
        </div>
    </div>
     @* @await Html.PartialAsync("_Viewdates")  *@
</div> 

<div class="modal fade" id="viewDatesModal" tabindex="-1" aria-labelledby="viewDatesModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewDatesModalLabel">Available Trek Dates</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @* Partial view content goes here *@
                @Html.Partial("_Viewdates")
                
            </div>
        </div>
    </div>
</div>
