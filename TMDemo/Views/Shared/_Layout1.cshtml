<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TrekMasters</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site2.css">
    <style>
        .SideProfile a.active {
            background-color: #b0c4df; 
            color: black;  
            padding: 10px;
            
        }
    </style>
</head>
<body>
    <!-- Header -->

    <nav class="navbar-light bg-light" style="margin-top:0px;position: fixed; width: 100%; z-index:100;">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/Home/Index">
                <img src="~/images/Logo1.png" alt="TrekMasters Logo" class="d-inline-block align-text-top">
            </a>
        </div>
    </nav>

        <div class="content-wrapper" style="min-height: 100%; ">
        <!-- Sidebar -->
        <nav class="sidebar">
            <div>
                <h2 class="text-center">Trekker Dashboard</h2>
            </div>
            
            @* <div class="SideProfile"  >
                    <a href="/Profile/Index">Profile</a>
                
                    <a href="/Profile/MyBookings">My Bookings</a>

                
                    <a href="@Url.Action("Logout", "Account", new { returnUrl = Url.Action("Index", "Home") })" class="dropdown-item" style="text-decoration: none; color: #000;">Logout</a>
                
            </div> *@
            <div class="SideProfile">
                <a href="/Profile/Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Profile" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">Profile</a>

                <a href="/Profile/MyBookings" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Profile" && ViewContext.RouteData.Values["action"]?.ToString() == "MyBookings" ? "active" : "")">My Bookings</a>

                <a href="@Url.Action("Logout", "Account", new { returnUrl = Url.Action("Index", "Home") })" class="dropdown-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Account" && ViewContext.RouteData.Values["action"]?.ToString() == "Logout" ? "active" : "")" style="text-decoration: none; color: #000;">Logout</a>
            </div>

                <div class="faq">
                    <a href="/Home/FAQs">FAQ's ?</a>
                </div>
        </nav>

        <!-- Main Content -->
        <main class="main-content" >
            @RenderBody()
        </main>
    </div>
 
    <!-- FAQ -->


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
