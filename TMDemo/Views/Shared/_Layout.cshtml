<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - TrekMasters</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/register.css">
    <link rel="stylesheet" href="~/css/trekpartial.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">


    <style>
        

        .dropdown:hover .dropdown-content {
            display: block !important;
        }

        form-container {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100vw;
            height: 100vh; 
            background: linear-gradient(rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0.5)), url('/images/SignInBg.jpg');
            background-size: cover; 
            background-position: center; 
            background-repeat: no-repeat;
        }




        
        .form-wrapper {
            background-color: rgba(255, 255, 255, 0.7); 
            padding: 30px;
            margin-top: 80px;
            border-radius: 10px;
            width: 800px;
            z-index: 1000;
        }

            
            .form-wrapper h2 {
                text-align: center;
                margin-bottom: 20px;
                font-size: 24px;
                color: #333;
            }

     
        .form-group {
            margin-bottom: 5px;
        }

            .form-group label {
                display: block;
                font-size: 14px;
                color: #555;
                margin-bottom: 5px;
            }

            .form-group input,
            .form-group select {
                width: 90%;
                padding: 10px;
                border: 1px solid #ddd;
                border-radius: 4px;
                font-size: 14px;
                color: #333;
            }

                .form-group input:focus,
                .form-group select:focus {
                    outline: none;
                    border-color: #007bff;
                    box-shadow: 0 0 4px rgba(0, 123, 255, 0.5);
                }

        
        button {
            width: 50%;
            padding: 10px;
            border: none;
            background-color: #1A3A6E;
            margin-top: 15px;
            margin-left: 170px;
            color: white;
            font-size: 16px;
            border-radius: 4px;
            cursor: pointer;

        }

            button:hover {
                background-color: #0056b3;
            }


        
        .login-link {
            text-align: center;
            margin-top: 10px;
            font-size: 14px;
            color: #555;
        }

            .login-link a {
                color: #1A3A6E;
                text-decoration: none;
               
            }

                .login-link a:hover {
                    text-decoration: underline;
                }

    </style>
</head>


<body>

    <header class="header">
        <nav class="navbar">
            <div class="logo">
                <a href="/" class="logo-link">
                    
                    
                    <img style="width:140px;" src="~/images/Logo1.png" />
                </a>
            </div>
            <ul class="nav-links">
                <li><a href="/Trek/AllTreks">All Treks</a></li>
                <li><a href="/Trek/UpcomingTreks">Upcoming Treks</a></li>
                <li class="dropdown">
                    <a href="#" class="dropbtn">Categories</a>
                    <div class="dropdown-content">
                        <a href="/Category/BySeason">Season</a>
                        <a href="/Category/ByDuration">Duration</a>
                        <a href="/Category/ByMonth">Month</a>
                        <a href="/Category/ByDifficulty">Difficulty</a>
                        <a href="/Category/ByRegion">Region</a>
                    </div>
                </li>
                <li><a href="/About">About Us</a></li>
            </ul>
            <div class="right-section">
                
                <div class="right-section">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="dropdown" style="position: relative;">
                            <a href="#" class="dropbtn" style="cursor: pointer;">👤 My Profile</a>
                            <div class="dropdown-content" style="display: none; position: absolute; top: 100%; left: 0; background-color: #f9f9f9; min-width: 150px; border: 1px solid #ccc; z-index: 1000;">
                                <div><a href="/Profile/Index">Profile</a></div>

                                <div><a href="/Profile/MyBookings">My Bookings</a></div>

                                <div style="margin-left:0px;  padding: 0.1rem 1rem;  text-decoration: none; color: #000;">
                                    <form class="align-content-center" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                        <button type="submit" class="nav-link btn btn-link text-dark dropdown-item" style=" margin-left:0px;">Logout</button>
                                    </form>
                                </div>
                                

                            </div>
                        </div>

                    }
                    else
                    {
                        
                        <a href="/Account/Register" class="profile-link">
                            <span class="profile-icon">👤</span> MyProfile
                        </a>
                    }
                </div>
                <form class="search-form">
                    <input type="text" placeholder="Search ..." class="search-input">
                </form>
            </div>
        </nav>
    </header>

    <!-- Main Content Section -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer Section -->
    <footer class="footer">
        <div class="footer-container">
            <div class="footer-header">
                <img src="~/images/Logo1.png" style="width:178px;" />
            </div>

            <h2 class="footer-title">Trek By Category</h2>
            <div class="categories">
                <div class="category">
                    <h3>Trek by Season</h3>
                    <ul>
                        <li>Spring</li>
                        <li>Summer</li>
                        <li>Monsoon</li>
                        <li>Autumn</li>
                        <li>Winter</li>
                    </ul>
                </div>
                <div class="category">
                    <h3>Trek by Duration</h3>
                    <ul>
                        <li>2 days</li>
                        <li>3 days</li>
                        <li>4 days</li>
                        <li>5 days</li>
                        <li>6+ days</li>
                    </ul>
                </div>
                <div class="category">
                    <h3>Trek by Month</h3>
                    <ul class="grid-2">
                        <li>Jan</li>
                        <li>Jul</li>
                        <li>Feb</li>
                        <li>Aug</li>
                        <li>Mar</li>
                        <li>Sep</li>
                        <li>Apr</li>
                        <li>Oct</li>
                        <li>May</li>
                        <li>Nov</li>
                        <li>Jun</li>
                        <li>Dec</li>
                    </ul>
                </div>
                <div class="category">
                    <h3>Trek by Difficulty</h3>
                    <ul>
                        <li>Easy</li>
                        <li>Moderate</li>
                        <li>Difficulty</li>
                    </ul>
                </div>
                <div class="category">
                    <h3>Trek by Region</h3>
                    <ul>
                        <li>Uttarakhand</li>
                        <li>Nagaland</li>
                        <li>Manipur</li>
                        <li>Sikkim</li>
                        <li>Ladakh</li>
                        <li>Karnataka</li>
                    </ul>
                </div>
            </div>

            <div class="footer-links">
                <div>
                    <h3>Quick Links</h3>
                    <ul>
                        <li><a href="#">Upcoming Treks</a></li>
                        <li><a href="#">FAQs</a></li>
                        <li><a href="#">Cancellation Policy</a></li>
                        <li><a href="#">About Us</a></li>
                    </ul>
                </div>
                <div>
                    <h3>Follow us on</h3>
                    <ul class="social-links">
                        <li><a href="#">Instagram</a></li>
                        <li><a href="#">Facebook</a></li>
                        <li><a href="#">LinkedIn</a></li>
                        <li><a href="#">WhatsApp</a></li>
                    </ul>
                </div>
                <div>
                    <h3>Contact us</h3>
                    <ul>
                        <li><span>📞</span> 987654321</li>
                        <li><span>📞</span> 987654321</li>
                        <li><span>⏰</span> Mon-Sun 9:30 - 19:00</li>
                        <li><span>✉️</span> TrekMastersIndia@gmail.com</li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

</body>
</html>