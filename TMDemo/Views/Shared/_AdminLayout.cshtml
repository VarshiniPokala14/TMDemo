<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - TrekMasters</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/register.css">
    <link rel="stylesheet" href="~/css/trekpartial.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">


    <style>


        .dropdown:hover .dropdown-content {
            display: block !important;
        }

        form-container {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100vw;
            height: 100vh;
            background: linear-gradient(rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0.5)), url('/images/SignInBg.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }





        .form-wrapper {
            background-color: rgba(255, 255, 255, 0.7);
            padding: 30px;
            margin-top: 80px;
            border-radius: 10px;
            width: 800px;
            z-index: 1000;
        }


            .form-wrapper h2 {
                text-align: center;
                margin-bottom: 20px;
                font-size: 24px;
                color: #333;
            }


        .form-group {
            margin-bottom: 5px;
        }

            .form-group label {
                display: block;
                font-size: 14px;
                color: #555;
                margin-bottom: 5px;
            }

            .form-group input,
            .form-group select {
                width: 90%;
                padding: 10px;
                border: 1px solid #ddd;
                border-radius: 4px;
                font-size: 14px;
                color: #333;
            }

                .form-group input:focus,
                .form-group select:focus {
                    outline: none;
                    border-color: #007bff;
                    box-shadow: 0 0 4px rgba(0, 123, 255, 0.5);
                }


        button {
            width: 50%;
            padding: 10px;
            border: none;
            background-color: #1A3A6E;
            margin-top: 15px;
            margin-left: 170px;
            color: white;
            font-size: 16px;
            border-radius: 4px;
            cursor: pointer;
        }

            button:hover {
                background-color: #0056b3;
            }



        .login-link {
            text-align: center;
            margin-top: 10px;
            font-size: 14px;
            color: #555;
        }

            .login-link a {
                color: #1A3A6E;
                text-decoration: none;
            }

                .login-link a:hover {
                    text-decoration: underline;
                }

    </style>
</head>


<body>

    <header class="header">
        <nav class="navbar">
            <div class="logo">
                <a href="/" class="logo-link">
                    <img style="width:140px;" src="~/images/Logo1.png" />
                </a>
            </div>
            <ul class="nav-links">
                <li><a href="/Admin/Treks">Treks</a></li>
                <li><a href="/Admin/AddTrek">Add Treks</a></li>
                <li><a href="/Admin/Index">Availability</a></li>               
            </ul>
            <div class="right-section">
                <li><a href="/Account/Logout">Logout</a></li>
            </div>
            
        </nav>
    </header>

    <!-- Main Content Section -->
    <main>
        @RenderBody()
    </main>

    

</body>
</html>