<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - TrekMasters</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/register.css">
    <link rel="stylesheet" href="~/css/trekpartial.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">
</head>


<body>

    <header class="header">
        <nav class="navbar">
            <div class="logo">
                <a href="/" class="logo-link">
                    <img style="width:140px;" src="~/images/Logo1.png" />
                </a>
            </div>
            <ul class="nav-links">
                <li>
                    <a class="nav-link" href="@Url.Action("Treks", "Admin")">All Treks</a>
                </li>
                <li>
                    <a class="nav-link" href="@Url.Action("AddTrek", "Admin")">Add Trek</a>
                </li>
                <li>
                    <a class="nav-link" href="@Url.Action("Index", "Admin")">Availability</a>
                </li>
            </ul>
            <ul class="right-section" style="text-decoration:none;">
                <li>
                    <div style="margin-left:0px;  padding: 0.1rem 1rem;  text-decoration: none; color: #000;">
                        <form class="align-content-center" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button type="submit" class="nav-link btn btn-link text-dark dropdown-item" style=" margin-left:0px;">Logout</button>
                        </form>
                    </div>
                </li>
            </ul>

        </nav>
    </header>

    <!-- Main Content Section -->
    <main>
        @RenderBody()
    </main>
</body>
</html>
