@model IEnumerable<GroupedTreksByCategory>

<div class="container">
    <h2 style="font-family:'Times New Roman', Times, serif; padding:10px; font:10px; color:black; padding:20px;text-align:center;">Treks Categorized by Season</h2>

    @if (Model.Any())
    {
        foreach (var group in Model)
        {
            <div class="category-group">

                <h3 class="category-title" style="color: #007bff;">@group.Category</h3>

                <div class="row">
                    @foreach (var trek in group.Treks)
                    {
                        
                        @await Html.PartialAsync("_TrekCard", trek)
                    }
                </div>
            </div>
        }
    }
    else
    {
        <p>No treks available for any season.</p>
    }
</div>


