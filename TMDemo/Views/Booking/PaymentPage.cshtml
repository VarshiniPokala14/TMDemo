@model TMDemo.Models.Booking


@{
    ViewData["Title"] = "Payment Page";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}



<div class="form-container">
	<div class="form-wrapper ">
        <h2>Payment</h2>
        <form asp-action="ProcessPayment" method="post">
            <input type="hidden" name="BookingId" value="@Model.BookingId" />
             
			<div class="form-group">
                <h2><strong>Members :</strong> @Model.NumberOfPeople</h2>
                <p><strong>Price:</strong>   @Model.Trek.Price * @Model.NumberOfPeople</p>
                <p><strong>GST:</strong>     @Model.Trek.Price * @Model.NumberOfPeople * 0.05</p>
                <p><strong>Platform Fee:</strong>  10</p>
			</div>
			<div class="form-group">
                <label for="PaymentMethod">Select Payment Method:</label>
                <select class="form-control" name="PaymentMethod" required>
                    <option value="Credit Card">Credit Card</option>
                    <option value="Debit Card">Debit Card</option>
                    <option value="UPI">UPI</option>
                </select>
			</div>
            <button class="btn btn-primary">Pay @((Model.NumberOfPeople * Model.Trek.Price) + (Model.NumberOfPeople * Model.Trek.Price * 0.05M)+10)</button>
		</form>
	</div>
</div>

<style>
    .form-container {
        background-color: rgba(255, 255, 255, 0.75);
        padding: 2rem;
        border-radius: 8px;       
        width: 100%;
        
    }

        .form-container h2 {
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
            text-align: center;
        }
        .treks{
            backgroung-color: gray;
        }
    .email-field {
        margin-bottom: 1rem;
    }

        .email-field input {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #6B3738;
            border-radius: 5px;
            background-color: #6B3738;
            color: white;
            font-size: 1rem;
        }

            .email-field input:focus {
                border-color: #6B3738;
                outline: none;
            }

    .form-control {
        padding: 0.75rem;
        width: 100%;
        border-radius: 5px;
        font-size: 1rem;
        border: 1px solid #6B3738;
    }

        .form-control:focus {
            border-color: #6B3738;
            outline: none;
        }

    .btn {
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
        margin-top: 1rem;
        margin-left:0px;
        transition: background-color 0.3s ease;
    }

    .btn-secondary {
        background-color: #6B3738;
        color: white;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #6B3738;
        }

    .btn-primary {
        background-color: #6B3745;
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: #6B3745;
        }

    .add-member-btn {
        display: block;
        margin-top: 1.5rem;
        text-align: center;
    }

        .add-member-btn button {
            background-color: #6B3738;
            color: white;
            padding: 0.75rem 2rem;
            font-size: 1rem;
            border-radius: 5px;
            border: none;
            cursor: pointer;
        }

            .add-member-btn button:hover {
                background-color: #C80000;
            }
</style>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
