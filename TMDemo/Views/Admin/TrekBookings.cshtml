@model IEnumerable<TrekAvailabilityViewModel>
@{
    var trekName = ViewBag.TrekName as string;
}

<h2 style="font-family:'Times New Roman', Times, serif; padding:10px; font:10px; color:brown; padding:20px;text-align:center;">Bookings for @trekName</h2>
<div class="availability-container m-3">
    @foreach (var booking in Model)
    {
        <div class="card mb-3 bg-light">
            <div class="card-body ">
                <div class="row">
                    <div class="col-md-2">
                        <strong>Start Date:</strong><br />
                        @booking.StartDate.ToString("yyyy-MM-dd")
                    </div>
                    <div class="col-md-2">
                        <strong>Max Group Size:</strong><br />
                        @booking.MaxGroupSize
                    </div>
                    <div class="col-md-2">
                        <strong>Remaining Slots:</strong><br />
                        @booking.RemainingSlots
                    </div>
                    <div class="col-md-2 pl-2">
                        <a href="@Url.Action("Users", "Admin", new { availabilityId = booking.AvailabilityId })" class="btn btn-primary">Users</a>
                    </div>
                    
                    <div class="col-md-2">
                        <a href="@Url.Action("Cancel","Admin",new {availabilityId=booking.AvailabilityId})" class=" btn btn-primary">Cancel Trek</a>
                    </div>
                </div>
                
            </div>
        </div>
    }
</div>

