@model IEnumerable<TrekParticipantViewModel>

@{
    var userName = ViewBag.UserName as string;
    var userEmail = ViewBag.UserEmail as string;
}

<h2 style="font-family:'Times New Roman', Times, serif; padding:10px; font:10px; color:brown; padding:20px;text-align:center;">
    Participants for User: @userName (@userEmail)
</h2>

<div class="participants-container m-3">
    @if (Model != null && Model.Any())
    {
        @foreach (var participant in Model)
        {
            <div class="card mb-3 bg-light">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <strong>Participant Name:</strong><br />
                            @participant.Name
                        </div>
                        <div class="col-md-3">
                            <strong>Email:</strong><br />
                            @participant.Email
                        </div>
                        <div class="col-md-3">
                            <strong>Contact Number:</strong><br />
                            @participant.ContactNumber
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>No participants found for this user.</p>
    }
</div>
