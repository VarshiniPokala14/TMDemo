@model IEnumerable<TrekMasters.Models.Availability>
@{
    ViewData["Title"] = "Manage Availability";
}

<h2 style="font-family:'Times New Roman', Times, serif; padding:10px; font:10px; color:black; padding:20px;text-align:center;">Manage Availability</h2>

<a asp-action="AddAvailability" class="btn btn-success" style="margin-left:20px; margin-top:10px; margin-bottom:10px;">Add New Availability</a>
@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-info">
        @TempData["SuccessMessage"]
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th>Trek</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Month</th>
            <th>Max Group Size</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var availability in Model)
        {
            <tr>
                <td>@availability.Trek?.Name</td>
                <td>@availability.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@availability.EndDate.ToString("yyyy-MM-dd")</td>
                <td>@availability.Month</td>
                <td>@availability.MaxGroupSize</td>
            </tr>
        }
    </tbody>
</table>

