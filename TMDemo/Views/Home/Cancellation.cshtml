@{
    ViewData["Title"] = "Cancel/Reschedule Trek";
}

<div class="trek-cancellation-policy">
    <div class="relative custom-serif">
        <img src="~/images/cancel.webp" />
        <div class="absolute inset-0 flex items-center justify-center text-center text-white ">
            <a asp-action="Cancellation" asp-controller="Home" class="mt-4 px-6 py-2 bg-gray-800 bg-opacity-50 rounded-full text-white">
                Cancel/Reschedule Trek
            </a>
        </div>
    </div>
    <div class="policy-container">
        <h1 class="fw-bold">Cancellation Policy</h1>
        <p class="custom-serif ml-9">
            We understand the pain when you have to call off a trek or a trek gets cancelled. As trekkers, we always
            look forward to treks, and after months of training and planning, if you have to cancel your trek or a trek
            gets called off, there's no greater disappointment than that. That is why we have a trekker-friendly cancellation policy.
        </p>

        <table class="policy-table">
            <thead>
                <tr>
                    <th colspan="2" class="table-header fw-bolder">Trek Masters Standard Cancellation Policy</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="fw-bold bg-light">No. of Days Before Trek Date</td>
                    <td class="fw-bold bg-light">Cancellation Charges</td>
                </tr>
                <tr>
                    <td>In 20 to 30 Days</td>
                    <td>10% cut off</td>
                </tr>
                <tr>
                    <td>In 10 to 20 Days</td>
                    <td>20% cut off</td>
                </tr>
                <tr>
                    <td>In 10 Days Before Trek</td>
                    <td>No Refund</td>
                </tr>
                <tr>
                    <th colspan="2" class="table-header fw-bolder">Reschedule Policy</th>
                </tr>
                <tr>
                    <td class="fw-bold bg-light">No. of Days Before Trek Date</td>
                    <td class="fw-bold bg-light">Reschedule Charges</td>
                </tr>
                <tr>
                    <td>Before 25 Days</td>
                    <td>No Extra Charges</td>
                </tr>
                <tr>
                    <td>In 25 Days Before Trek</td>
                    <td>5% Extra Charges</td>
                </tr>
            </tbody>
        </table>
    </div>

</div>

<style>
    .relative {
        position: relative;
    }

        .relative img {
            width: 100%;
            height: 700px;
            object-fit: cover;
        }

    .absolute {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        justify-content: center;
        align-items: center;
        padding-top: 300px;
        height: 140px;
    }


        .absolute a {
            font-size: 3rem;
            background-color: #1A3A6E;
            border: 10px;
            padding: 30px;
            text-decoration: none;
        }

    .custom-serif {
        font-family: 'Times New Roman', serif; /* Use Times New Roman */
    }

    .trek-cancellation-policy {
        font-family: Arial, sans-serif;
        line-height: 1.6;
    }

    .header-image {
        position: relative;
        background: url('/path-to-your-image.jpg') no-repeat center center;
        background-size: cover;
        height: 300px;
    }

        .header-image .overlay {
            background-color: rgba(0, 0, 0, 0.5);
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .header-image h1 {
            color: #fff;
            font-size: 2.5rem;
        }

    .policy-container {
        font-family: Arial, sans-serif;
        padding: 20px;
        text-align: left;
    }

        .policy-container h1 {
            margin-bottom: 20px;
        }

        .policy-container p {
            margin-bottom: 20px;
            margin-left: 20px;
        }

    .policy-table {
        width: 50%;
        border-collapse: collapse;
        margin-top: 20px;
        margin-left: 350px;
        margin-bottom: 50px;
    }

        .policy-table th,
        .policy-table td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        .policy-table .table-header {
            background-color: #d4e2fc;
            text-align: center;
            font-weight: bold;
        }

        .policy-table th {
            background-color: #f4f4f4;
        }
</style>